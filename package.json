{
  "name": "deskio",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "openapi:lint": "pnpm --filter @deskio/contracts openapi:lint",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "echo \"Prepare script placeholder\"",
    "dev:infra": "docker compose -f infra/docker-compose.yml up -d",
    "down:infra": "docker compose -f infra/docker-compose.yml down",
    "clean": "git clean -xdf -e .env -e **/.env -e pnpm-lock.yaml",
    "dev:customer": "pnpm --filter ./apps/customer-portal dev",
    "dev:agent": "pnpm --filter ./apps/agent-console dev",
    "dev:admin": "pnpm --filter ./apps/admin-console dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "prettier": "^3.8.1",
    "turbo": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
